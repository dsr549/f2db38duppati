extends layout
block content
  div(class="container-fluid")
    h1= title
     -let result=results 
    
      div(class="row")
       each form,index in result
        div(class = "col-sm-6  bg-success" onclick=`buy(${index})`) #{form.squirrel_color}        
        div(class = "col-sm-6 bg-success" onclick=`buy(${index})`) #{form.squirrel_breed}        
        div(class = "col-sm-6 bg-success" onclick=`buy(${index})`) #{form.squirrel_price}
        hr
      script.     
       function buy(itemNo)
       {
         alert(`You purchased Item ${itemNo+1}`)
       }
  

  
  

